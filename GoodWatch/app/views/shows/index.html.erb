<!DOCTYPE html>
<html lang="en">
<header id="header">
  <%= stylesheet_link_tag 'indexstyle' %>
  <nav class="navbar">
    <div class="navitem">
      <%= link_to "GoodWatch", shows_path, class:"title" %>          
    </div>
    <div class="navitem">
      <a class="text">
        Browse
      </a>
    </div>
    <div class="navitem">
      <%= form_with url: shows_path, class:"text", local: true, method: :get do %>
      <%= label_tag 'title_search' %>
      <%= text_field_tag 'title_search', nil, maxlength: 20 %>
      <%= submit_tag 'Search', class:"text"%>
      <% end %>
    </div>
    <div>
      <%= link_to (image_tag('plus.png')), new_show_path, class: "img navitem" %>
    </div>
  </nav>
</header>
  <body>
    <table class="table">
      <tr>
        <th>Title</th>
        <th>Studio</th>
        <th>Number of Seasons</th>
        <th>Year</th>
        <th>Episodes</th>
      </tr>

      <% @shows.each do |show| %>
        <tr>
          <!--<td class='title'><%= link_to show.title, show_path(show) %></td>-->
          <td><%= show.title %></td>
          <td><%= show.studio %></td>
          <td><%= show.number_of_seasons %></td>
          <td><%= show.year %></td>
          <td><%= show.episodes %></td>
        </tr>
      <% end %>
    </table>
    <br>
  </body>
</html>
