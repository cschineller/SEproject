<h1>Show details</h1>

<h3><%= @show.title %></h3>
<dl>
  <dt>Studio</dt><dd><%= @show.studio %></dd>
  <dt>Year</dt><dd><%= @book.year %></dd>
  <dt>Pages</dt><dd><%= @book.pages %></dd>
